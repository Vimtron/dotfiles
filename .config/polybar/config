[colors]
foreground = ${xrdb:color15:#222}
background = ${xrdb:color0:#222}
primary = #80F0A6
;primary = ${xrdb:color15:#FFF}

[bar/mainBar]
width = 100%
height = 27 

padding = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Fabtasque Sans Mono:size=8;1

modules-left = bspwm
modules-center = date
modules-right = filesystem volume battery
module-margin = 1

override-redirect = false
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

label-focused = " %index% "
label-focused-foreground = ${colors.primary}

label-occupied = " %index% "
label-urgent = " %index&! "

label-empty = " %index% "
label-empty-foreground = ${xrdb:color2:#000}

[module/date]
type = internal/date

date = %a %b %d
time = %H:%M
date-alt = %Y-%m-%d
time-alt = %H:%M:%S

label = %date%, %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>
label-volume = Volume: %percentage%%
label-muted = Volume: %percentage%%

[module/filesystem]
type = internal/fs

mount-0 = /
mount-1 = /home
label-mounted = %mountpoint%: %percentage_free%% free

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

full-at = 99

label-charging = Charging--%percentage%%
label-discharging = %percentage%%
