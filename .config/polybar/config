[colors]
foreground = ${xrdb:color15:#222}
background = ${xrdb:color0:#222}
primary = #80F0A6
;primary = ${xrdb:color15:#FFF}

[section/base]
width = 100%
height = 27 

padding = 1

background = ${colors.background}
foreground = ${colors.foreground}

modules-left = bspwm mpd
modules-center = date
modules-right = filesystem volume battery brightness
module-margin = 1

override-redirect = false
wm-restack = bspwm

[bar/desktop]
inherit = section/base
font-0 = inconsolata:size=8
monitor = DVI-I-1

[bar/laptop]
inherit = section/base
font-0 = inconsolata:size=7
monitor = LVDS-1

[module/mpd]
type = internal/mpd

format-online = <label-song> [<label-time>]

[module/brightness]
type = custom/script
exec = ~/.config/scripts/getPrettyBrightness.sh
interval = 1
label = Brightness: %output%

[module/bspwm]
type = internal/bspwm

label-focused = " %index% "
label-focused-foreground = ${colors.primary}

label-occupied = " %index% "
label-urgent = " %index&! "

label-empty = " %index% "
label-empty-foreground = ${xrdb:color2:#000}

[module/date]
type = internal/date

date = %a %b %d
time = %H:%M
date-alt = %Y-%m-%d
time-alt = %H:%M:%S

label = %date%, %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>
label-volume = Volume: %percentage%%
label-muted = Volume: %percentage%%(Muted)

[module/filesystem]
type = internal/fs

mount-0 = /
mount-1 = /home
label-mounted = %mountpoint%: %percentage_free%% free

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

full-at = 99

label-charging = Charging--%percentage%%
label-discharging = Battery: %percentage%%
label-full = Battery: %percentage%%
